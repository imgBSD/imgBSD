# PROVIDE: imgbsdinit_late
# BEFORE: LOGIN
# KEYWORD: nojail shutdown

. /etc/rc.subr

name="imgbsdinit_late"
rcvar="imgbsdinit_late_enable"

stop_cmd="imgbsdinit_stop"
start_cmd="imgbsdinit_start"

load_rc_config $name

: ${imgbsdinit_late_enable=NO}

imgbsdinit_start() {

	# If this is the first boot then save the generated ssh data
	( sleep 5; ls -la /home/* > /dev/null 2>&1 || \
		cfg ssh >/dev/null 2>/dev/null ) &

	# Change Xorg priority
	( sleep 5; rtprio 31 -`pgrep Xorg` > /dev/null 2>&1) &

	# Save gdm directory after boot
	( sleep 120; cfg add /etc/local/gdm/home ) &
}

imgbsdinit_stop() {
	echo "Nothing to stop."
}

run_rc_command "$1"
